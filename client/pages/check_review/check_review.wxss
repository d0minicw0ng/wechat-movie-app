.movie-container {
  background-color: white;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 60rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 30rpx;
  border: 1rpx solid lightgray;
}

.movie-poster {
  width: 300rpx;
  height: 400rpx;
  position: relative;
  bottom: 40rpx;
}

.movie-title {
  font-weight: 700;
  padding-left: 40rpx;
  padding-right: 40rpx;  
}

.reviewer {
  display: flex;
  flex-direction: row;
}

.profile-image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.username {
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.pending-review {
  margin-top: 30rpx;
  padding: 30rpx;
}