.movie-container {
  background-color: white;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 60rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 30rpx;
  border: 1rpx solid lightgray;
}

.movie-poster {
  width: 300rpx;
  height: 400rpx;
  position: relative;
  bottom: 40rpx;
}

.movie-title {
  font-weight: 700;
  padding-left: 40rpx;
  padding-right: 40rpx;  
}

.movie-description {
  margin-top: 20rpx;
  font-size: 30rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.reviews-navigation {
  margin-top: 60rpx;
  display: flex;
  justify-content: space-around;
  width: 70%;
}

.check-reviews, .add-review {
  border: 1rpx solid lightgray;
  color: lightgray;
  padding: 10rpx 20rpx;
  border-radius: 10rpx; 
}